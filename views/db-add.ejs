<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Data</title>
    <link rel="icon" href="/whatsapp.png" />
    <!-- Bootstrap CSS & other CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/db-add.css" />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!--navbar-->
    <header>
      <nav class="navbar fixed-top navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Broadcast WA</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/"
                  >Broadcast</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/db"
                  >Database</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!--navbar end-->
    <!--Message-->
    <div class="welcome">
      <div class="message">
        <h1>Tambah Data Siswa</h1>
      </div>
    </div>
    <!--Message End-->
    <!--Main Body-->
    <form
      method="POST"
      action="/api/siswa/add"
      class="container main"
      id="main-form"
    >
      <% if(status === undefined){ %>
      <div class="form-group form1">
        <div class="form-child">
          <label for="InputTahunAjaran">Tahun Ajaran</label>
          <input
            type="text"
            class="form-control"
            id="InputTahunAjaran"
            placeholder="Contoh format: 2020/2021"
            name="tahun_ajaran"
            value="<%= selectedTahunAjaran %>"
          />
          <div class="invalid-feedback">Tidak boleh kosong</div>
        </div>
        <div class="form-child">
          <label for="InputKelas">Kelas</label>
          <input
            type="text"
            class="form-control"
            id="InputKelas"
            placeholder="Masukkan kelas"
            name="kelas"
            value="<%= selectedKelas %>"
          />
          <div class="invalid-feedback">Tidak boleh kosong</div>
        </div>
        <div class="form-child">
          <label for="InputNamaSiswa">Nama Siswa</label>
          <input
            type="text"
            class="form-control"
            id="InputNamaSiswa"
            placeholder="Masukkan nama siswa"
            name="nama"
          />
          <div class="invalid-feedback">Tidak boleh kosong</div>
        </div>
      </div>
      <div class="form-group form2">
        <h2>Data WA Ortu/Wali 1</h2>
        <div class="form-child">
          <label for="InputNamaOrtu1">Nama Ortu/Wali</label>
          <input
            type="text"
            class="form-control"
            id="InputNamaOrtu1"
            placeholder="Masukkan nama ortu/wali"
            name="ortu1_nama"
          />
        </div>
        <div class="form-child">
          <label for="inputNomorOrtu1">Nomor WA</label>
          <textarea
            id="inputNomorOrtu1"
            placeholder="Dipisahkan dengan koma, contoh: 0856xxxxxxxxx, 081233xxxxxx"
            name="ortu1_phone"
            class="form-control"
          ></textarea>
          <div class="invalid-feedback">Nomor tidak valid</div>
        </div>
      </div>
      <div class="form-group form3">
        <h2>Data WA Ortu/Wali 2</h2>
        <div class="form-child">
          <label for="InputNamaOrtu2">Nama Ortu/Wali</label>
          <input
            type="text"
            class="form-control"
            id="InputNamaOrtu2"
            placeholder="Masukkan nama ortu/wali"
            name="ortu2_nama"
          />
        </div>
        <div class="form-child">
          <label for="InputNomorOrtu2">Nomor WA</label>
          <textarea
            id="inputNomorOrtu2"
            placeholder="Dipisahkan dengan koma, contoh: 0856xxxxxxxxx, 081233xxxxxx"
            name="ortu2_phone"
            class="form-control"
          ></textarea>
          <div class="invalid-feedback">Nomor tidak valid</div>
        </div>
      </div>

      <% } else { %>
      <div class="form-group form1">
        <div class="form-child">
          <label for="InputTahunAjaran">Tahun Ajaran</label>
          <input type="text" class="form-control <%=
          validation_result.tahun_ajaran || "is-invalid" %> "
          id="InputTahunAjaran" placeholder="Contoh format: 2020/2021"
          name="tahun_ajaran" value="<%= data.tahun_ajaran %>" />
          <div class="invalid-feedback">Tidak boleh kosong</div>
        </div>
        <div class="form-child">
          <label for="InputKelas">Kelas</label>
          <input type="text" class="form-control <%= validation_result.kelas ||
          "is-invalid" %>" id="InputKelas" placeholder="Masukkan kelas"
          name="kelas" value="<%= data.kelas %>" />
          <div class="invalid-feedback">Tidak boleh kosong</div>
        </div>
        <div class="form-child">
          <label for="InputNamaSiswa">Nama Siswa</label>
          <input type="text" class="form-control <%= validation_result.nama ||
          "is-invalid" %>" id="InputNamaSiswa" placeholder="Masukkan nama siswa"
          name="nama" value="<%= data.nama %>" />
          <div class="invalid-feedback">Tidak boleh kosong</div>
        </div>
      </div>
      <div class="form-group form2">
        <h2>Data WA Ortu/Wali 1</h2>
        <div class="form-child">
          <label for="InputNamaOrtu1">Nama Ortu/Wali</label>
          <input
            type="text"
            class="form-control"
            id="InputNamaOrtu1"
            placeholder="Masukkan nama ortu/wali"
            name="ortu1_nama"
            value="<%= data.ortu1_nama %>"
          />
        </div>
        <div class="form-child">
          <label for="inputNomorOrtu1">Nomor WA</label>
          <textarea
            id="inputNomorOrtu1"
            placeholder="Dipisahkan dengan koma, contoh: 0856xxxxxxxxx, 081233xxxxxx"
            name="ortu1_phone"
            class="form-control <%= validation_result.ortu1_phone || "is-invalid" %>"
          >
<%= data.ortu1_phone %></textarea
          >
          <% if (validation_result.ortu1_phone === false) { %>
            <div class="invalid-feedback">Nomor <% invalid_nums.ortu1_phone.forEach(num => { %><%= num + " " %><% }) %>tidak valid / teregistrasi di WA</div>
          <% } %>
        </div>
      </div>
      <div class="form-group form3">
        <h2>Data WA Ortu/Wali 2</h2>
        <div class="form-child">
          <label for="InputNamaOrtu2">Nama Ortu/Wali</label>
          <input
            type="text"
            class="form-control"
            id="InputNamaOrtu2"
            placeholder="Masukkan nama ortu/wali"
            name="ortu2_nama"
            value="<%= data.ortu2_nama %>"
          />
        </div>
        <div class="form-child">
          <label for="InputNomorOrtu2">Nomor WA</label>
          <textarea
            id="inputNomorOrtu2"
            placeholder="Dipisahkan dengan koma, contoh: 0856xxxxxxxxx, 081233xxxxxx"
            name="ortu2_phone"
            class="form-control <%= validation_result.ortu2_phone || "is-invalid" %>"
          >
<%= data.ortu2_phone %></textarea
          >
          <% if (validation_result.ortu2_phone === false) { %>
            <div class="invalid-feedback">Nomor <% invalid_nums.ortu2_phone.forEach(num => { %><%= num + " " %><% }) %>tidak valid / teregistrasi di WA</div>
          <% } %>
        </div>
      </div>
      <% } %>

      <button type="submit" class="submit btn btn-primary" id="submit-btn">
        + Tambah
      </button>
    </form>
  </body>

  <script src="/db-add.js"></script>
  <!--Main Body End-->
</html>
